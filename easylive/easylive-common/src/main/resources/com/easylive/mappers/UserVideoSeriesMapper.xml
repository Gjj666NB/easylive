<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easylive.mappers.UserVideoSeriesMapper">
    <!--实体映射-->
    <resultMap id="base_result_map" type="com.easylive.entity.po.UserVideoSeries">
        <!-- 列表ID -->
        <id column="series_id" property="seriesId"/>
        <!-- 列表名称 -->
        <result column="series_name" property="seriesName"/>
        <!-- 描述 -->
        <result column="series_description" property="seriesDescription"/>
        <!-- 用户ID -->
        <result column="user_id" property="userId"/>
        <!-- 排序 -->
        <result column="sort" property="sort"/>
        <!-- 更新时间 -->
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--通用结果查询列-->
    <sql id="base_column_list">
        u
        .
        series_id
        , u.series_name, u.series_description, u.user_id, u.sort, u.update_time
    </sql>

    <!--基础查询条件-->
    <sql id="base_query_condition">
        <if test="query.seriesId != null">
            and u.series_id = #{query.seriesId}
        </if>
        <if test="query.seriesName != null and query.seriesName != ''">
            and u.series_name = #{query.seriesName}
        </if>
        <if test="query.seriesDescription != null and query.seriesDescription != ''">
            and u.series_description = #{query.seriesDescription}
        </if>
        <if test="query.userId != null and query.userId != ''">
            and u.user_id = #{query.userId}
        </if>
        <if test="query.sort != null">
            and u.sort = #{query.sort}
        </if>
        <if test="query.updateTime != null">
            and u.update_time = #{query.updateTime}
        </if>
    </sql>

    <!--扩展查询条件-->
    <sql id="base_query_condition_extend">
        <if test="query.seriesNameFuzzy != null and query.seriesNameFuzzy != ''">
            and u.series_name like concat('%', #{query.seriesNameFuzzy}, '%')
        </if>
        <if test="query.seriesDescriptionFuzzy != null and query.seriesDescriptionFuzzy != ''">
            and u.series_description like concat('%', #{query.seriesDescriptionFuzzy}, '%')
        </if>
        <if test="query.userIdFuzzy != null and query.userIdFuzzy != ''">
            and u.user_id like concat('%', #{query.userIdFuzzy}, '%')
        </if>
        <if test="query.updateTimeStart != null and query.updateTimeStart != ''">
            <![CDATA[ and u.update_time >= str_to_date(#{query.updateTimeStart}, '%Y-%m-%d') ]]>
        </if>
        <if test="query.updateTimeEnd != null and query.updateTimeEnd != ''">
            <![CDATA[ and u.update_time < date_sub(str_to_date(#{query.updateTimeEnd}, '%Y-%m-%d'),interval -1 day) ]]>
        </if>
    </sql>

    <!--通用查询条件-->
    <sql id="query_condition">
        <where>
            <include refid="base_query_condition"/>
            <include refid="base_query_condition_extend"/>
        </where>
    </sql>

    <!--查询列表-->
    <select id="selectList" resultMap="base_result_map">
        select
        <include refid="base_column_list"/>
        from user_video_series u
        <include refid="query_condition"/>
        <if test="query.orderBy != null">
            order by ${query.orderBy}
        </if>
        <if test="query.simplePage != null">
            limit #{query.simplePage.start}, #{query.simplePage.end}
        </if>
    </select>

    <!--查询数量-->
    <select id="selectCount" resultType="java.lang.Integer">
        select count(1) from user_video_series u
        <include refid="query_condition"/>
    </select>

    <!--单条插入（匹配有值的字段）-->
    <insert id="insert" parameterType="com.easylive.entity.po.UserVideoSeries">
        <selectKey keyProperty="bean.seriesId" resultType="Integer" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into user_video_series
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bean.seriesId != null">
                series_id,
            </if>
            <if test="bean.seriesName != null">
                series_name,
            </if>
            <if test="bean.seriesDescription != null">
                series_description,
            </if>
            <if test="bean.userId != null">
                user_id,
            </if>
            <if test="bean.sort != null">
                sort,
            </if>
            <if test="bean.updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bean.seriesId != null">
                #{bean.seriesId},
            </if>
            <if test="bean.seriesName != null">
                #{bean.seriesName},
            </if>
            <if test="bean.seriesDescription != null">
                #{bean.seriesDescription},
            </if>
            <if test="bean.userId != null">
                #{bean.userId},
            </if>
            <if test="bean.sort != null">
                #{bean.sort},
            </if>
            <if test="bean.updateTime != null">
                #{bean.updateTime},
            </if>
        </trim>
    </insert>

    <!--插入或更新（匹配有值的字段）-->
    <insert id="insertOrUpdate" parameterType="com.easylive.entity.po.UserVideoSeries">
        insert into user_video_series
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bean.seriesId != null">
                series_id,
            </if>
            <if test="bean.seriesName != null">
                series_name,
            </if>
            <if test="bean.seriesDescription != null">
                series_description,
            </if>
            <if test="bean.userId != null">
                user_id,
            </if>
            <if test="bean.sort != null">
                sort,
            </if>
            <if test="bean.updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bean.seriesId != null">
                #{bean.seriesId},
            </if>
            <if test="bean.seriesName != null">
                #{bean.seriesName},
            </if>
            <if test="bean.seriesDescription != null">
                #{bean.seriesDescription},
            </if>
            <if test="bean.userId != null">
                #{bean.userId},
            </if>
            <if test="bean.sort != null">
                #{bean.sort},
            </if>
            <if test="bean.updateTime != null">
                #{bean.updateTime},
            </if>
        </trim>
        on duplicate key update
        <trim prefix="" suffix="" suffixOverrides=",">
            <if test="bean.seriesName != null">
                series_name = values(series_name),
            </if>
            <if test="bean.seriesDescription != null">
                series_description = values(series_description),
            </if>
            <if test="bean.userId != null">
                user_id = values(user_id),
            </if>
            <if test="bean.sort != null">
                sort = values(sort),
            </if>
            <if test="bean.updateTime != null">
                update_time = values(update_time),
            </if>
        </trim>
    </insert>

    <!--批量添加-->
    <insert id="insertBatch" parameterType="com.easylive.entity.po.UserVideoSeries">
        insert into user_video_series (series_id, series_name, series_description, user_id, sort, update_time) values
        <foreach collection="list" item="item" separator=",">
            (#{item.seriesId}, #{item.seriesName}, #{item.seriesDescription}, #{item.userId}, #{item.sort},
            #{item.updateTime})
        </foreach>
    </insert>

    <!--批量添加或更新-->
    <insert id="insertOrUpdateBatch" parameterType="com.easylive.entity.po.UserVideoSeries">
        insert into user_video_series (series_id, series_name, series_description, user_id, sort, update_time) values
        <foreach collection="list" item="item" separator=",">
            (#{item.seriesId}, #{item.seriesName}, #{item.seriesDescription}, #{item.userId}, #{item.sort},
            #{item.updateTime})
        </foreach>
        on duplicate key update
        series_id = values(series_id), series_name = values(series_name), series_description =
        values(series_description), user_id = values(user_id), sort = values(sort), update_time = values(update_time)
    </insert>

    <!--根据SeriesId查询-->
    <select id="selectBySeriesId" resultMap="base_result_map">
        select
        <include refid="base_column_list"/>
        from user_video_series u where u.series_id = #{seriesId}
    </select>

    <!--根据SeriesId更新-->
    <update id="updateBySeriesId" parameterType="com.easylive.entity.po.UserVideoSeries">
        update user_video_series
        <set>
            <if test="bean.seriesId != null">
                series_id = #{bean.seriesId},
            </if>
            <if test="bean.seriesName != null">
                series_name = #{bean.seriesName},
            </if>
            <if test="bean.seriesDescription != null">
                series_description = #{bean.seriesDescription},
            </if>
            <if test="bean.userId != null">
                user_id = #{bean.userId},
            </if>
            <if test="bean.sort != null">
                sort = #{bean.sort},
            </if>
            <if test="bean.updateTime != null">
                update_time = #{bean.updateTime},
            </if>
        </set>
        where series_id = #{seriesId}
    </update>

    <!--根据SeriesId删除-->
    <delete id="deleteBySeriesId">
        delete
        from user_video_series
        where series_id = #{seriesId}
    </delete>

    <!--根据query条件修改-->
    <update id="updateByQuery">
        update user_video_series u
        <set>
            <if test="bean.seriesId != null">
                u.series_id = #{bean.seriesId},
            </if>
            <if test="bean.seriesName != null">
                u.series_name = #{bean.seriesName},
            </if>
            <if test="bean.seriesDescription != null">
                u.series_description = #{bean.seriesDescription},
            </if>
            <if test="bean.userId != null">
                u.user_id = #{bean.userId},
            </if>
            <if test="bean.sort != null">
                u.sort = #{bean.sort},
            </if>
            <if test="bean.updateTime != null">
                u.update_time = #{bean.updateTime},
            </if>
        </set>
        <include refid="query_condition"/>
    </update>

    <!--根据query条件删除-->
    <delete id="deleteByQuery">
        delete from user_video_series u
        <include refid="query_condition"/>
    </delete>

    <select id="selectUserAllVideoSeries" resultMap="base_result_map">
        select t.*, v.video_cover cover
        from (select *,
                     (select video_id
                      from user_video_series_video v
                      where v.series_id = s.series_id
                      order by v.sort asc limit 1) video_id from user_video_series s
        where s.user_id = #{userId}
            ) t
            left join video_info v
        on t.video_id = v.video_id
        order by t.sort asc
    </select>

    <select id="selectMaxSort" resultType="java.lang.Integer">
        select ifnull(max(sort), 0)
        from user_video_series
        where user_id = #{userId}
    </select>

    <update id="updateSortBatch">
        <foreach item="item" collection="useVideoSeriesList" separator=";">
            update user_video_series set sort = #{item.sort} where series_id = #{item.seriesId} and user_id =
            #{item.userId}
        </foreach>
    </update>

    <resultMap id="base_result_map_video" type="com.easylive.entity.po.UserVideoSeries" extends="base_result_map">
        <collection property="videoInfoList" column="series_id"
                    select="com.easylive.mappers.UserVideoSeriesMapper.selectVideoList">
        </collection>
    </resultMap>

    <select id="selectVideoList" resultType="com.easylive.entity.po.VideoInfo">
        select v.video_id, v.video_name, v.video_cover, v.create_time, v.play_count
        from user_video_series_video sv
                 left join video_info v
                           on sv.video_id = v.video_id
        where sv.series_id = #{seriesId}
        order by sv.sort asc limit 5
    </select>

    <select id="selectListWithVideo" resultMap="base_result_map_video">
        select
        <include refid="base_column_list"/>
        from user_video_series u
        <include refid="query_condition"/>
        <if test="query.orderBy != null">
            order by ${query.orderBy}
        </if>
        <if test="query.simplePage != null">
            limit #{query.simplePage.start}, #{query.simplePage.end}
        </if>
    </select>
</mapper>